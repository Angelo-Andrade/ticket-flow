<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TicketFlow - Criar usuário</title>
    <link rel="stylesheet" type="text/css" href="/styles/styles.css" />
    <link rel="stylesheet" href="/styles/styles-daltonicos.css" id="daltonic-style" disabled>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <header class="header">
        <div class="menu-toggle" onclick="toggleMenu()">
            <span>&#9776;</span>
        </div>
        <div class="user-info">
            <i class="fas fa-user"></i> <span id="user-name">Sgt Monteiro</span>
        </div>
        <!-- <div class="header-icons">
            <i class="fas fa-bell"></i><span class="notification-count"></span>
            <i class="fas fa-cogs"></i>
        </div> -->
        <div class="font-size-controls">
            <button onclick="adjustFontSize('increase')">A+</button>
            <button onclick="adjustFontSize('decrease')">A-</button>
        </div>
        <button class="color-blind-mode" onclick="toggleDaltonicMode()">Modo Daltônico</button>
    </header>

    <nav class="sidebar">
        <ul>
            <img src="https://logodownload.org/wp-content/uploads/2018/02/exercito-brasileiro-logo-2.png" alt="Logo do Exército Brasileiro" style="width: 50px; display: block; margin: 0 auto 20px;"></a>
            <li><a href="/"><i class="fas fa-history icon"></i> <span>Histórico de Chamados</span></a></li>
            <li><a href="/criar_chamados"><i class="fas fa-plus icon"></i> <span>Abrir Chamado</span></a></li>
            <li><a href="/filtrar?filtro=c.status_chamado&valor=aberto"><i class="fas fa-folder-open icon"></i> <span>Chamados em Aberto</span></a></li>
            <li><a href="/usuarios/listar"><i class="fas fa-users icon"></i> <span>Usuários Cadastrados</span></a></li>
            <li><a href="/usuario/criar"><i class="fas fa-user-plus icon"></i> <span>Cadastrar Novo Usuário</span></a></li>
            <li><a href="/usuario/desconectar"><i class="fas fa-sign-out-alt icon"></i> <span>Logout</span></a></li>
        </ul>
    </nav>
    
    <div class="container">
        <h1 class="title">Criar usuário</h1>
        <div class="div-usuarios">
            <form class="form-cadastrar-usuarios" action="/usuario/cadastrar" method="POST">
                <label for="nome_completo">Nome Completo:</label>
                <input type="text" id="nome_completo" name="nome_completo" value="<%= dados && dados.nome_completo ? dados.nome_completo : '' %>">
            
                <label for="nome_guerra">Nome de Guerra:</label>
                <input type="text" id="nome_guerra" name="nome_guerra" value="<%= dados && dados.nome_guerra ? dados.nome_guerra : '' %>">
            
                <label for="telefone">Telefone:</label>
                <input type="text" id="telefone" name="telefone" value="<%= dados && dados.telefone ? dados.telefone : '' %>" maxlength="15" placeholder="(XX) XXXXX-XXXX" pattern="\(\d{2}\)\s\d{4,5}-\d{4}" title="Formato: (XX) XXXXX-XXXX ou (XX) XXXX-XXXX" >
            
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" value="<%= dados && dados.email ? dados.email : '' %>">
            
                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" ><button type="button" onclick="toggleVisibilityPassword()">Visualizar</button>
            
                <label for="tipo">Tipo de Usuário:</label>
                <select id="tipo" name="tipo" >
                    <option value="admin" <%= dados && dados.tipo === 'admin' ? 'selected' : '' %>>Administrador</option>
                    <option value="comum" <%= dados && dados.tipo === 'comum' ? 'selected' : '' %>>Comum</option>
                </select>
                <br>
            
                <label for="id_posto_grad">Posto/Graduação:</label>
                <select id="id_posto_grad" name="id_posto_grad" >
                    <% posto_grads.forEach(posto_grad => { %>
                        <option value="<%= posto_grad.id_posto_grad %>" <%= dados && dados.id_posto_grad === posto_grad.id_posto_grad ? 'selected' : '' %>><%= posto_grad.descricao %></option>
                    <% }); %>
                </select>
                <br>
            
                <% if(error) { %> 
                    <div class="error">
                        <h3>Houve um erro no cadastro do usuário:</h3>
                        <p style="color:red"><%= error.message %></p>
                    </div>
                <% } %>
            
                <button type="submit">Cadastrar</button>
            </form>
        </div>
    </div>
    <script src="/js/scripts.js"></script>
</body>


</html>